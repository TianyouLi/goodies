{
		"builders": [
				{
						"type": "docker",
						"image": "lity/ubuntu-dev:0.1",
						"export_path": "ubuntu-dev.tar"
				}
		],

		"provisioners": [
				{
						"type": "file",
						"source": "run.sh",
						"destination": "/etc/init.d/run.sh"
				},
				{
						"type": "shell",
						"scripts": [
								"deploy.sh"
						]
				}
		],
		
		"post-processors": [
				[
						{
								"type": "docker-import",
								"repository": "lity/ubuntu-dev",
								"tag": "0.2"
						},
						"docker-push"
				]
		]
}

